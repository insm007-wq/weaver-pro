{
  "name": "weaver-pro",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:5174": "vite --port 5174",
    "dev:5175": "vite --port 5175",
    "dev:auto": "vite --port 0",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "electron:dev": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:dev:5174": "cross-env VITE_DEV_SERVER_URL=http://localhost:5174 electron .",
    "electron:dev:5175": "cross-env VITE_DEV_SERVER_URL=http://localhost:5175 electron .",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.63.1",
    "@fluentui/react-components": "^9.69.0",
    "@fluentui/react-icons": "^2.0.309",
    "@fluentui/tokens": "^1.0.0-alpha.22",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "electron-store": "^8.2.0",
    "ffmpeg-static": "^5.2.0",
    "google-auth-library": "^10.3.0",
    "keytar": "^7.9.0",
    "music-metadata": "^11.9.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.55.0",
    "playwright-core": "^1.55.0",
    "pretendard": "^1.3.9",
    "puppeteer-core": "^24.19.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "replicate": "^1.0.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "cross-env": "^10.0.0",
    "electron": "^28.1.3",
    "electron-builder": "^26.0.12",
    "vite": "^4.3.9"
  },
  "build": {
    "productName": "Weaver Pro",
    "appId": "com.weaverpro.app",
    "npmRebuild": false,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
